<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">

</head>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
  $(function () {
    var socket = io();
    $('form').submit(function(){
      socket.emit('post story', $('#storyinput').val());
      $('#storyinput').val('');
      return false;
    });
    socket.on('post story', function(msg){
      $('#storyarea').append($('<li>').text(msg));
    });
  });
</script>
<body>
  <link rel='stylesheet' href='/stylesheets/style.css' />
    <div class="jumbotron">
      <h1 class="display-4">Game Page</h1>
      <form action="">
        <input id="storyinput"/><button>Submit</button>
      </form>
    </div>
    <div class="jumbotron">
      <h1 class="display-4">Current Story</h1>
      <ul id="storyarea"> </ul>
      </form>
    </div>
</body>
</html>
